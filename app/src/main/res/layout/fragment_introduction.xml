<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.prognoobie.nikhil.getc.Introduction_fragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:text="Introduction to C"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_below="@+id/toolbar"
                android:id="@+id/textView2"
                android:background="@drawable/my_border"
                android:textSize="30sp"
                android:textAlignment="center"
                android:fontFamily="cursive" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:layout_below="@+id/editText"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/definitionC"
                android:textSize="20sp"
                android:text="C is a programming language developed at AT &amp; T's Bell laboratories of USA in 1972. It was designed and written by a man named Dennis Retchie."
                android:fontFamily="serif-monospace"
                android:textColor="?attr/colorControlActivated" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:layout_marginTop="16dp"
                android:id="@+id/editText"

                android:textSize="20sp"
                android:text="What is C?"

                android:fontFamily="serif-monospace"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/definitionC"
                android:layout_alignStart="@+id/definitionC" />








        </RelativeLayout>
    </ScrollView>

</FrameLayout>
